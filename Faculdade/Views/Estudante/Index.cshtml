@model IEnumerable<Faculdade.Models.Estudante>

@{
    ViewData["Title"] = "Lista de Estudantes";
}

<h1>Lista de Estudantes</h1>

<p>
    <a asp-action="Create">Cadastrar Estudante</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Curso)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Curso.Nome)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Matricula">Editar</a> |
                <a asp-action="Details" asp-route-id="@item.Matricula">Detalhes</a> |
                <a asp-action="Delete" asp-route-id="@item.Matricula">Excluir</a>
            </td>
        </tr>
}
    </tbody>
</table>
